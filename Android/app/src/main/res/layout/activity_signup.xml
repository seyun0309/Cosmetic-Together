<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/loginAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CEDDFE"
            app:contentInsetStart="0sp"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageButton
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:backgroundTint="#00FF0000"
                android:layout_marginStart="10sp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/nanum_square_eb"
                android:text="회원가입" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginAppBarLayout"
        android:layout_marginTop="20sp">

        <LinearLayout
            android:id="@+id/SignupLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <EditText
                    android:id="@+id/SignupIDText"
                    android:layout_width="350sp"
                    android:layout_height="55sp"
                    android:ems="10"
                    android:fontFamily="@font/nanum_square_r"
                    android:hint="이름"
                    android:inputType="text"
                    android:paddingLeft="10sp"
                    android:textColor="#000000"
                    android:textColorHint="#9E9E9E" />

            </FrameLayout>

            <TextView
                android:id="@+id/SignupIDMessage"
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <EditText
                android:id="@+id/SignupPasswordText"
                android:layout_width="350sp"
                android:layout_height="55sp"
                android:ems="10"
                android:fontFamily="@font/nanum_square_r"
                android:hint="비밀번호"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <TextView
                android:id="@+id/SignupPasswordMessage"
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <EditText
                android:id="@+id/SignupPasswordText2"
                android:layout_width="350sp"
                android:layout_height="55sp"
                android:ems="10"
                android:fontFamily="@font/nanum_square_r"
                android:hint="비밀번호 확인"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <TextView
                android:id="@+id/SignupPasswordMessage2"
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <EditText
                android:id="@+id/SignupPhoneText"
                android:layout_width="350sp"
                android:layout_height="55sp"
                android:ems="10"
                android:fontFamily="@font/nanum_square_r"
                android:hint="전화번호"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <EditText
                    android:id="@+id/SignupPostNumberText"
                    android:layout_width="350sp"
                    android:layout_height="55sp"
                    android:ems="10"
                    android:fontFamily="@font/nanum_square_r"
                    android:hint="우편번호"
                    android:inputType="text"
                    android:paddingLeft="10sp"
                    android:textColor="#000000"
                    android:textColorHint="#9E9E9E" />

                <Button
                    android:layout_width="73sp"
                    android:layout_height="38sp"
                    android:layout_gravity="end"
                    android:background="@drawable/stroke_sky_full_angle"
                    android:fontFamily="@font/nanum_square_b"
                    android:gravity="center"
                    android:text="주소 찾기"
                    android:textColor="#9E9E9E"
                    android:textSize="16sp" />

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/SignupAddressText"
                android:layout_width="350sp"
                android:layout_height="55sp"
                android:ems="10"
                android:fontFamily="@font/nanum_square_r"
                android:hint="주소"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

            <EditText
                android:id="@+id/SignupHomeText"
                android:layout_width="350sp"
                android:layout_height="55sp"
                android:ems="10"
                android:fontFamily="@font/nanum_square_r"
                android:hint="상세 주소"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textColor="#000000"
                android:textColorHint="#9E9E9E" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SignupLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="20sp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/SignupLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/signupButton"
                android:layout_width="350sp"
                android:layout_height="55sp"
                android:background="@drawable/stroke_sky_full_angle"
                android:fontFamily="@font/nanum_square_b"
                android:gravity="center"
                android:text="회원가입"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>