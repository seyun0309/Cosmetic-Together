<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/buyerInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매자 정보"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buyerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름: 홍길동" />

        <TextView
            android:id="@+id/buyerContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연락처: 010-1234-5678" />

        <TextView
            android:id="@+id/buyerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메일: user@example.com" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/shippingInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송 정보"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shippingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="홍길동" />

        <TextView
            android:id="@+id/shippingContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="010-1234-5678" />

        <TextView
            android:id="@+id/shippingPostalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345" />

        <TextView
            android:id="@+id/shippingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서울시 강남구 역삼동 10-10" />

    </LinearLayout>
</layout>
