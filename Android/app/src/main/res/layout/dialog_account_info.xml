<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp"
    android:gravity="center">

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문해주셔서 감사합니다.\n입금을 완료해주셔야 배송이 진행됩니다."
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 예금주 -->
    <TextView
        android:id="@+id/tvOrganizerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- 은행명 -->
    <TextView
        android:id="@+id/tvFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- 계좌번호 -->
    <TextView
        android:id="@+id/tvFormDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 추가 정보 안내 -->
    <TextView
        android:id="@+id/tvAdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자세한 정보는 마이페이지 - 구매 내역에서 확인 가능합니다."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="확인"
        android:textAllCaps="false"
        android:background="@drawable/stroke_sky_full_angle"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:elevation="2dp" />
</LinearLayout>